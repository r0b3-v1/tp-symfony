{% extends 'base.html.twig' %}

{% block title %}Liste des matières
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Liste des matières :
		</h1>
		<table class="table mt-5">
			<thead>
				<tr>
					<th scope="col">Nom</th>
					<th scope="col">Enseignée par</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>

				{% for matiere in matieres %}
					<tr>
						<td>{{matiere.nom}}</td>
						<td>
							{% for prof in matiere.profs %}
								{{prof.prenom}}
								{{prof.nom}} {% if not(loop.last) %},{% endif %}
							{% endfor %}
						</td>
						<td>
						<a class="btn btn-danger" href="{{path('app_matiere_supprimer', {'id' : matiere.id})}}" onclick="return confirm('Voulez vous vraiment supprimer cette matière? Cela supprimera aussi les professeurs qui l\'enseignent')"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</a>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
		<a href="{{path('app_matiere_ajouter')}}" class="btn btn-primary mt-5"><i class="fa-solid fa-plus"></i> Ajouter une matière</a>

	</div>


{% endblock %}
