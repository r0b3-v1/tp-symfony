{% extends 'base.html.twig' %}

{% block title %}Hello ClasseController!
{% endblock %}

{% block body %}
	<div class="container mt-5">
    <h1>Liste des classes : </h1>
		<table class="table mt-5">
			<thead>
				<tr>
					<th scope="col">Niveau</th>
					<th scope="col">Nom</th>
					<th scope="col">Professeur principal</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>

				{% for classe in classes %}
					<tr>
						<th scope="row">{{classe.niveau}}</th>
						<td>{{classe.nom}}</td>
						<td>{{classe.prof.prenom}} {{classe.prof.nom}}</td>
						<td>
							<a class="btn btn-danger" href="{{path('app_classe_supprimer', {'id' : classe.id})}}" onclick="return confirm('Voulez vous vraiment supprimer cette classe? Cela supprimera aussi les élèves qui sont dedans')"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</a>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
		<a href="{{path('app_classe_ajouter')}}" class="btn btn-primary mt-5"><i class="fa-solid fa-plus"></i> Ajouter une classe</a>

	</div>


{% endblock %}
