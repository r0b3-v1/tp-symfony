{% extends 'base.html.twig' %}

{% block title %}Hello ProfController!{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Liste des professeurs : </h1>
		<table class="table mt-5">
			<thead>
				<tr>
					<th scope="col">Prénom</th>
					<th scope="col">Nom</th>
					<th scope="col">Matière enseignée</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>

				{% for prof in profs %}
					<tr>
						<td>{{prof.prenom}}</td>
						<td>{{prof.nom}}</td>
						<td>{{prof.matiere.nom}} </td>
						<td> 
						<a class="btn btn-danger" href="{{path('app_prof_supprimer', {'id' : prof.id})}}" onclick="return confirm('Voulez vous vraiment supprimer ce professeur?')"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</a>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
		<a href="{{path('app_prof_ajouter')}}" class="btn btn-primary mt-5"><i class="fa-solid fa-plus"></i> Ajouter un professeur</a>
	</div>
{% endblock %}
